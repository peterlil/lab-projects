@page
@model IndexModel
@{
    ViewData["Title"] = "Auth Landing";
}

<div class="text-center">
    <h1 class="display-4">Auth Landing</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Header</th>
                <th scope="col">Value</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var header in Request.Headers)
        {
            <tr>
                <th scope="row">@header.Key</th>
                <td>@header.Value</td>
            </tr>
        }
        </tbody>
        <thead>
            <tr>
                <th scope="col">Claim</th>
                <th scope="col">Value</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var claim in User.Claims)
        {
            <tr>
                <th scope="row">@claim.Type</th>
                <td>@claim.Value</td>
            </tr>
        }
        </tbody>
    </table>
</div>
